#
#   Copy an 11-byte string from one location to another
#	using indexed addressing (shorter)
#
#
TEST	START	4000			4000 
SRC	BYTE	C'TEST STRING'		4000
DST	RESB	11          		400b
ZERO	WORD	0				400e
ELEVEN	WORD	11				4011
LOOP	LDX	ZERO				4014 *
	LDCH	SRC,X				4017 *
	STCH	DST,X				401a *
	TIX	ELEVEN					401d *
	JLT	LOOP					4020 *
FIN	END	LOOP
#This is the end of the program
